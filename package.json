{
  "name": "yield-lusd-vault",
  "version": "1.0.0",
  "description": "Template to kickstart a Foundry project",
  "author": {
    "name": "sliponit",
    "url": "https://github.com/sliponit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sliponit/yield-vault-lusd.git"
  },
  "scripts": {
    "clean": "forge clean",
    "compile": "forge compile",
    "coverage": "forge coverage --report lcov && lcov --extract lcov.info -o lcov.info 'src/*' && genhtml lcov.info -o coverage",
    "----------LOCAL-DEPLOYMENT-SCRIPTS----------": "",
    "anvil:ethereum:local": "anvil --fork-url $MAINNET_RPC_URL --port $LOCAL_L1_PORT",
    "anvil:optimism:local": "anvil --fork-url $OPTIMISM_RPC_URL --port $LOCAL_L2_PORT --code-size-limit $LOCAL_CODE_SIZE_LIMIT_BYTES",
    "----------LINTING----------": "",
    "format": "prettier --config .prettierrc --write \"**/*.{json,md,sol,yml}\"",
    "format:file": "prettier --config .prettierrc --write",
    "hint": "solhint --config \"./.solhint.json\" \"{src,test}/**/*.sol\"",
    "lint-staged": "lint-staged",
    "prepack": "npm run clean && npm run compile",
    "prepare": "husky install",
    "test": "forge test"
  },
  "devDependencies": {
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "prettier": "2.8.3",
    "prettier-plugin-solidity": "1.1.1",
    "solhint": "3.3.8",
    "solhint-plugin-prettier": "0.0.5"
  },
  "files": [
    "src/**",
    "out/**"
  ]
}